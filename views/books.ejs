<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column min-vh-100 bg-dark text-light">

  <!-- Header -->
  <header class="bg-secondary bg-gradient shadow-sm py-3 mb-4">
    <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">
      <h1 class="h3 text-warning fw-bold mb-2 mb-md-0">Book Manager</h1>
      <nav>
        <a href="/books" class="btn btn-outline-light btn-sm rounded-pill me-2 mb-2 mb-md-0">Book List</a>
        <a href="/books/add" class="btn btn-warning btn-sm rounded-pill">Add Book</a>
      </nav>
    </div>
  </header>

  <!-- Main Content -->
  <main class="flex-fill">
    <div class="container py-4 py-md-5">
      <h1 class="text-center mb-4 text-warning fw-bold">Book List</h1>

      <div class="d-flex justify-content-end mb-4">
        <a href="/books/add" class="btn btn-warning rounded-pill shadow-sm px-4">Add New Book</a>
      </div>

      <!-- Responsive Cards for Mobile -->
      <div class="d-md-none">
        <% books.forEach(book => { %>
          <div class="card mb-3 shadow rounded-4 bg-secondary bg-gradient text-light">
            <div class="row g-2 p-3 align-items-center">
              <div class="col-4 text-center">
                <% if(book.coverImage) { %>
                  <img src="/uploads/<%= book.coverImage %>" class="img-fluid rounded shadow-sm" style="max-height:80px;" alt="Cover">
                <% } else { %>
                  <span class="text-muted fst-italic small">No Image</span>
                <% } %>
              </div>
              <div class="col-8">
                <h5 class="fw-semibold mb-1"><%= book.title %></h5>
                <p class="mb-1 small">Author: <%= book.author || '-' %></p>
                <p class="mb-2 small">Price: $<%= book.price ? book.price.toFixed(2) : '-' %></p>
                <div class="d-flex gap-2 flex-wrap">
                  <a href="/books/edit/<%= book._id %>" class="btn btn-sm btn-warning w-50">Edit</a>
                  <form action="/books/delete/<%= book._id %>" method="POST" class="w-50 m-0">
                    <button type="submit" class="btn btn-sm btn-danger w-100">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>

      <!-- Table for md and above -->
      <div class="table-responsive d-none d-md-block shadow rounded-4 bg-secondary bg-gradient">
        <table class="table table-hover table-dark align-middle mb-0 text-center">
          <thead class="table-warning text-dark">
            <tr>
              <th scope="col">Cover</th>
              <th scope="col">Title</th>
              <th scope="col">Author</th>
              <th scope="col">Price ($)</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% books.forEach(book => { %>
              <tr>
                <td class="text-center">
                  <% if(book.coverImage) { %>
                    <img src="/uploads/<%= book.coverImage %>" class="img-fluid rounded shadow-sm" style="max-height:80px; max-width:60px;" alt="Cover">
                  <% } else { %>
                    <span class="text-muted fst-italic small">No Image</span>
                  <% } %>
                </td>
                <td class="fw-semibold"><%= book.title %></td>
                <td><%= book.author || '-' %></td>
                <td><%= book.price ? book.price.toFixed(2) : '-' %></td>
                <td>
                    <div class="d-flex flex-column flex-sm-row justify-content-center gap-2">
                      <a href="/books/edit/<%= book._id %>" class="btn btn-sm btn-warning shadow-sm">Edit</a>
                      <form action="/books/delete/<%= book._id %>" method="POST" class="m-0 p-0">
                        <button type="submit" class="btn btn-sm btn-danger shadow-sm">Delete</button>
                      </form>
                    </div>
                  </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-secondary bg-gradient text-light py-3 mt-auto shadow-sm">
    <div class="container text-center">
      <small>&copy; <%= new Date().getFullYear() %> Book Manager. All rights reserved.</small>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
