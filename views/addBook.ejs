<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Book</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-dark text-white d-flex flex-column min-vh-100">

  <!-- Header -->
  <header class="bg-secondary bg-gradient shadow-sm py-3 mb-4 mb-md-5">
    <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">
      <h1 class="h3 text-warning fw-bold mb-2 mb-md-0">Book Manager</h1>
      <nav>
        <a href="/books" class="btn btn-outline-light btn-sm rounded-pill me-2 mb-2 mb-md-0">Book List</a>
        <a href="/books/add" class="btn btn-warning btn-sm rounded-pill">Add Book</a>
      </nav>
    </div>
  </header>

  <!-- Main Content -->
  <main class="flex-fill py-4">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8 col-xl-6">
          <div class="card shadow-lg rounded-4 bg-secondary bg-gradient text-white">
            <div class="card-body p-4 p-md-5">
              <h2 class="card-title text-center text-warning mb-4 fw-bold">Add New Book</h2>
              
              <form action="/books/add" method="POST" enctype="multipart/form-data">
                
                <!-- Row 1: Title & Author -->
                <div class="row g-3 mb-3">
                  <div class="col-12 col-md-6">
                    <label for="title" class="form-label text-light">Title <span class="text-danger">*</span></label>
                    <input type="text" class="form-control rounded-pill bg-dark text-white border-0" 
                           id="title" name="title" placeholder="Enter book title" required>
                  </div>
                  <div class="col-12 col-md-6">
                    <label for="author" class="form-label text-light">Author</label>
                    <input type="text" class="form-control rounded-pill bg-dark text-white border-0" 
                           id="author" name="author" placeholder="Enter author name">
                  </div>
                </div>

                <!-- Row 2: Description -->
                <div class="row mb-3">
                  <div class="col-12">
                    <label for="description" class="form-label text-light">Description</label>
                    <textarea class="form-control rounded bg-dark text-white border-0" 
                              id="description" name="description" rows="4" placeholder="Enter book description"></textarea>
                  </div>
                </div>

                <!-- Row 3: Price & Cover Image -->
                <div class="row g-3 mb-4">
                  <div class="col-12 col-md-6">
                    <label for="price" class="form-label text-light">Price ($)</label>
                    <input type="text" class="form-control rounded-pill bg-dark text-white border-0" 
                          name="price"  placeholder="Enter book price">
                  </div>
                  <div class="col-12 col-md-6">
                    <label for="coverImage" class="form-label text-light">Cover Image</label>
                    <input class="form-control bg-dark text-white border-0" 
                           type="file" id="coverImage" name="coverImage" accept="image/*">
                  </div>
                </div>

                <!-- Row 4: Buttons -->
                <div class="row">
                  <div class="col-12 d-flex flex-column flex-sm-row justify-content-between gap-2">
                    <button type="submit" class="btn btn-warning rounded-pill px-4 shadow w-100 w-sm-auto">Add Book</button>
                    <a href="/books" class="btn btn-outline-light rounded-pill px-4 shadow w-100 w-sm-auto">Cancel</a>
                  </div>
                </div>

              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-secondary bg-gradient text-light py-3 mt-auto shadow-sm">
    <div class="container text-center">
      <small>&copy; <%= new Date().getFullYear() %> Book Manager. All rights reserved.</small>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
